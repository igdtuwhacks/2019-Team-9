<html>

<head>

    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- documentation at http://getbootstrap.com/docs/4.0/, alternative themes at https://bootswatch.com/4-alpha/ -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" type="text/css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    <title>Add Subjects</title>

</head>

<body>
    <% include ./partials/admin-navbar %>
        <br>
        <center>
            <h1>Subject</h1>
            <form>
                <div class="form-group">
                    <input required type="text" class="form-control" id="Name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input required type="number" class="form-control" id="Credits" placeholder="Credits">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Check If compulsory
                          </label>
                    </div>
                </div>
                <button id="add" class="btn btn-outline-primary">Add</button>
            </form>
            <br>
            <table class="table" id="tbody">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Credits</th>
                        <th scope="col">Compulsary</th>
                    </tr>
                </thead>
            </table>
        </center>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous"></script>
<script>
    document.getElementById('add').addEventListener('click', e => {
        e.preventDefault();
        var subjects = {
            name: $("#Name").val(),
            credits: $("#Credits").val(),
            compulsory: $('#gridCheck').is(':checked')
        };

        if (subjects.name.trim() === '' || subjects.credits.trim() === '') {
            return;
        }

        $("#Name").val('');
        $("#Credits").val('');

        subjects.compulsory = subjects.compulsory ? 'Yes' : 'No';

        var tbody = $('#tbody');
        var tr = '<tr>';
        tr += '<td>' + subjects.name + '</td><td>' + subjects.credits + '</td><td>' + subjects.compulsory + '</td></tr>';
        tbody.append(tr);

        $.ajax({
            type: "POST",
            url: '/addSubject',
            data: subjects
        });
    });
</script>

</html>