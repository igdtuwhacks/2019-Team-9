<html>

<head>

    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- documentation at http://getbootstrap.com/docs/4.0/, alternative themes at https://bootswatch.com/4-alpha/ -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" type="text/css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>

    <title>Add Course</title>

</head>

<body>
    <% include ./partials/admin-navbar %>
        <br>
        <center>
            <h1>Course</h1>
            <form>
                <div class="form-group">
                    <input required type="text" class="form-control" id="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input required type="text" class="form-control" id="description" name="description" placeholder="Description">
                </div>
                <div class="form-group">
                    <input required type="number" class="form-control" id="semesters" placeholder="Number of Semesters">
                </div>
                <hr>
                <select id="subject">
                        <% subArr.forEach(e => { %>
                                <option value="<%= e._id %>">
                                    <%= e.name %>
                                </option>
                            <% }); %>
                </select>
                <button id="add" class="btn btn-outline-primary">Add</button>
                <button id="submit" class="btn btn-outline-primary">Submit</button>
            </form>
            <br>
            <!-- <table class="table" id="tbody">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
            </table> -->
        </center>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous"></script>
<script>
    var x = [];
    document.getElementById('add').addEventListener('click', e => {
        e.preventDefault();
        var subject = {
            sub: $("#subject").val()
        };

        // $('#tbody').append(`<tr><td>${subject.sub}</td></tr>`);
        x.push(subject.sub);
    });

    document.getElementById('submit').addEventListener('click', e => {
        e.preventDefault();
        var data = {
            x,
            name: $('#name').val(),
            description: $('#description').val(),
            semesters: $('#semesters').val()
        }

        if (data.name.trim() === '' || data.description.trim() === '') {
            return;
        }

        $.ajax({
            type: "POST",
            url: '/addCourse',
            data: data
        });

    });
</script>

</html>